{% for vhost in apache_vhosts %}
<VirtualHost {{ vhost.address }}>
  {% if vhost.servername %}ServerName {{ vhost.servername }}  {% endif %}
  {% if vhost.directoryindex %}DirectoryIndex {{ vhost.directoryindex }} {% endif %}
  {% if vhost.documentroot %}DocumentRoot {{ vhost.documentroot }}{% else %}DocumentRoot "/var/www/html"{% endif %}
  {% if vhost.serveradmin %}ServerAdmin {{ vhost.serveradmin }} {% endif %}
  {% if vhost.rewriteengine %}RewriteEngine {{ vhost.rewriteengine }} {% endif %}
  <Directory {{ vhost.directorypath }}>
     AllowOverride All
     Options Indexes FollowSymLinks
     Order allow,deny
     Allow from all
  </Directory>
</VirtualHost>
{% endfor %}
